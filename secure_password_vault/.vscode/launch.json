{
    // ============================================================================
    // VS Code Launch Configuration for LLDB Debugger
    // ============================================================================
    // This file configures debugging sessions for the Secure Password Vault
    // project in Visual Studio Code using the LLDB debugger (native Rust debugger).
    // 
    // Each configuration defines:
    // - Build commands (cargo build/test)
    // - Runtime arguments
    // - Environment variables
    // - Console output location
    // ============================================================================
    // Launch configuration schema version
    "version": "0.2.0",
    // Array of debug/launch configurations
    "configurations": [
        {
            // ================================================================
            // Configuration 1: Run with --help flag
            // ================================================================
            // Purpose: Test the help text and command-line interface
            // Usage: Shows all available commands and options
            // ================================================================
            // Debugger type: LLDB (LLVM debugger, best for Rust)
            "type": "lldb",
            // Action: Launch a new process (vs. attach to existing)
            "request": "launch",
            // Human-readable name shown in debug dropdown
            "name": "Run: secure_password_vault --help",
            // Cargo build configuration
            "cargo": {
                // Build command arguments
                "args": [
                    "build", // Build the project
                    "--bin", // Build only the binary target
                    "secure_password_vault", // Binary name
                    "--package", // Specify package
                    "secure_password_vault" // Package name
                ]
            },
            // Arguments passed to the compiled binary
            "args": [
                "--help" // Show help text
            ],
            // Working directory for execution
            "cwd": "${workspaceFolder}",
            // Output location (integratedTerminal allows user interaction)
            "console": "integratedTerminal",
            // Environment variables for the running process
            "env": {
                // Set Rust logging level
                // Options: trace, debug, info, warn, error
                "RUST_LOG": "info"
            }
        },
        {
            // ================================================================
            // Configuration 2: Run without arguments
            // ================================================================
            // Purpose: Run the program with no arguments (will show error/help)
            // Usage: Testing default behavior when no command provided
            // ================================================================
            "type": "lldb",
            "request": "launch",
            "name": "Run: secure_password_vault",
            "cargo": {
                "args": [
                    "build",
                    "--bin",
                    "secure_password_vault",
                    "--package",
                    "secure_password_vault"
                ]
            },
            // Empty args array means no arguments passed
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "RUST_LOG": "info"
            }
        },
        {
            // ================================================================
            // Configuration 3: Run unit tests for binary
            // ================================================================
            // Purpose: Execute unit tests defined in the binary crate
            // Usage: Testing business logic in main.rs and modules
            // Note: Uses --no-run to compile tests without executing (for debugging)
            // ================================================================
            "type": "lldb",
            "request": "launch",
            "name": "Test: unit tests (bin)",
            "cargo": {
                "args": [
                    "test", // Run test suite
                    "--no-run", // Compile but don't execute (for debugging)
                    "--bin", // Test only binary crate
                    "secure_password_vault"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            // ================================================================
            // Configuration 4: Run all tests in workspace
            // ================================================================
            // Purpose: Execute all tests across entire workspace
            // Usage: Comprehensive testing of all modules
            // Includes: Unit tests, integration tests, doc tests
            // ================================================================
            "type": "lldb",
            "request": "launch",
            "name": "Test: all (workspace)",
            "cargo": {
                "args": [
                    "test", // Run test suite
                    "--no-run" // Compile tests without running
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            // ================================================================
            // Configuration 5: Run specific test with filter
            // ================================================================
            // Purpose: Debug a single test or subset of tests
            // Usage: Replace <test_name_or_filter> with actual test name
            // Example: "test_encrypt_decrypt_roundtrip"
            // ================================================================
            "type": "lldb",
            "request": "launch",
            "name": "Test: single test (edit test filter below)",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package",
                    "secure_password_vault"
                ]
            },
            // Edit this array to specify which test(s) to run
            // Test names can use partial matching
            "args": [
                "<test_name_or_filter>" // Replace with actual test name
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}